{
  "permissions": {
    "allow": [
      "Bash(cargo:*)",
      "Bash(rustup:*)",
      "Bash(rustc:*)",
      "Bash(cargo-clippy:*)",
      "Bash(pnpm:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(bun:*)",
      "Bash(expo:*)",
      "Bash(node:*)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(ls:*)",
      "Bash(fd:*)",
      "Bash(rg:*)",
      "Bash(bat:*)",
      "Bash(eza:*)",
      "Bash(tree:*)",
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(pwd:*)",
      "Bash(which:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(wc:*)",
      "Bash(diff:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(jq:*)",
      "Bash(curl:*)",
      "Bash(docker:*)",
      "Bash(docker-compose:*)",
      "Bash(npm run dev:*)",
      "Skill(frontend-design:frontend-design)",
      "Bash(cargo check:*)",
      "Bash(npm run typecheck:*)",
      "Bash(npm run type-check:*)",
      "Bash(find:*)",
      "Bash(cat:*)",
      "Bash(du:*)",
      "Bash(gemini:*)",
      "Bash(codex:*)",
      "Bash(claude:*)",
      "WebSearch"
    ],
    "deny": [],
    "ask": [],
    "defaultMode": "acceptEdits"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "WebSearch",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/gemini-search/websearch-intercept.py",
            "timeout": 180
          }
        ]
      },
      {
        "matcher": "AskUserQuestion",
        "hooks": [
          {
            "type": "command",
            "command": "/bin/bash ~/.claude/hooks/ccnotify-interactive.sh",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "Read|Edit|Write|Bash|Grep|Glob|Task",
        "hooks": [
          {
            "type": "command",
            "command": "CLAUDE_HOOK_TYPE=PreToolUse /bin/bash ~/.claude/hooks/tool-activity.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "TodoWrite",
        "hooks": [
          {
            "type": "command",
            "command": "/bin/bash ~/.claude/hooks/todo-watch.sh",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Read|Edit|Write|Bash|Grep|Glob|Task",
        "hooks": [
          {
            "type": "command",
            "command": "CLAUDE_HOOK_TYPE=PostToolUse /bin/bash ~/.claude/hooks/tool-activity.sh",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "/bin/bash ~/.claude/hooks/file-changes.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/bin/bash ~/.claude/hooks/notification-tts.sh",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "/bin/bash ~/.claude/hooks/notification-ccnotify.sh",
            "timeout": 30
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "/bin/bash ~/.claude/scripts/statusline.sh"
  },
  "enabledPlugins": {
    "claude-mem@thedotmack": true,
    "learning-output-style@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true,
    "context7@claude-plugins-official": true,
    "example-skills@anthropic-agent-skills": true,
    "supabase@claude-plugins-official": true,
    "plugin-dev@claude-plugins-official": true,
    "lua-lsp@claude-plugins-official": true,
    "clangd-lsp@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": true,
    "gopls-lsp@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": true,
    "rust-analyzer-lsp@claude-plugins-official": true,
    "swift-lsp@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true
  }
}
